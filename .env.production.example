# Production Environment Configuration
# Copy this file to .env.production and update the values for your production environment

# Database Configuration - SQL Server
DB_SERVER=SYED-FAZLI-LAPT
DB_NAME=InventoryManagementDB
DB_USER=
DB_PASSWORD=
DB_ENCRYPT=true
DB_TRUST_CERT=true
DB_CONNECTION_TIMEOUT=30000
DB_REQUEST_TIMEOUT=30000

# Application Configuration
NODE_ENV=production
PORT=3001
FRONTEND_URL=http://localhost:4173

# Upload Configuration
UPLOAD_DIR=./uploads/tender-files
MAX_FILE_SIZE=10485760

# Security Configuration
SESSION_SECRET=your-secure-session-secret-here-change-this-in-production
JWT_SECRET=your-jwt-secret-here-change-this-in-production

# CORS Configuration
CORS_ORIGIN=http://localhost:4173

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/production.log

